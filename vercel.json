{
    "version": 2,
    "builds": [
        {
            "src": "index.ts",
            "use": "@now/node-server",
            "config": {
              "maxDuration": 20
            }
        }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.ts",
        "methods": [
          "GET",
          "POST",
          "DELETE"
        ]
      }
    ]
  }